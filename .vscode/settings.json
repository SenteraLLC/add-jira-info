{
  "emeraldwalk.runonsave": {
      "commands": [
          {
              "match": "\\.(ts|js)$",
              "cmd": "${workspaceFolder}/node_modules/.bin/prettier --write ${file}",
              "silent": true,
          },
      ]
  },
  "task.allowAutomaticTasks": "on",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/*.code-search": true
  },
  "files.watcherExclude": {
    "**/dist/**": true
  },
  "files.exclude": {
    "**/dist": true
  }
}
